{
  "name": "coverage-monitor-action",
  "version": "1.8.0",
  "private": true,
  "description": "A GitHub Action that monitor coverage.",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts && echo \"All done\"",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run format && npm run lint && npm test && npm run build && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slavcodev/coverage-monitor-action.git"
  },
  "keywords": [
    "actions",
    "coverage",
    "clover",
    "json-summary",
    "istanbul-coverage-reports",
    "nyc"
  ],
  "author": "Veaceslav Medvedev",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^6.0.0",
    "xml2js": "^0.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.23.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-github": "^5.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-prettier": "^5.0.0-alpha.2",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
