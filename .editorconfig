# EditorConfig is awesome: http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 120

[*.{diff,md}]
trim_trailing_whitespace = false

[*.{html,css,ts,js,json,xml,yml,yaml}]
indent_size = 2

[*.txt]
indent_style = tab
